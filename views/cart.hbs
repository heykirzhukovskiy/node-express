<h1>Корзина</h1>

<div id="cart">
  {{#if courses.length}}
    <table>
      <thead>
        <tr>
          <th>Название</th>
          <th>Цена (шт.)</th>
          <th>Количество</th>
          <th>Действия</th>
        </tr>
      </thead>
      <tbody>

        {{#each courses}}
          <tr>
            <td>{{title}}</td>
            <td>{{price}}</td>
            <td>{{count}}</td>
            <td>
              <button
                class="btn btm-small js-remove"
                data-csrfToken="{{@root.csrfToken}}"
                data-id="{{id}}"
              >Удалить</button>
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>

    <p><strong>Цена:</strong> <span class="price">{{price}}</span></p>

    <form action="/orders" method="post">
      <input name="_csrf" type="hidden" value={{csrfToken}} />
      <button type="submit" class="btn">Сделать заказ</button>
    </form>
  {{else}}
    <p>Корзина пуста</p>
  {{/if}}
</div>